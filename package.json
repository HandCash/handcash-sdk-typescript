{
  "name": "@handcash/handcash-sdk",
  "version": "0.0.1",
  "description": "HandCash SDK",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.esm.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "types": "./dist/types/index.d.ts",
  "main": "dist/index.cjs",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "node build.js && tsc -p tsconfig.json",
    "lint": "eslint . --fix",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "bitcoin",
    "handcash",
    "payments",
    "wallet",
    "web3"
  ],
  "author": "HandCash USA, INC",
  "license": "MIT",
  "dependencies": {
    "@noble/curves": "^1.4.0",
    "esbuild-wasm": "^0.23.0",
    "joi": "17.9.2",
    "nanoid": "3.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitest/coverage-c8": "^0.27.1",
    "dotenv": "^16.0.3",
    "esbuild": "^0.19.5",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "vitest": "^0.27.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HandCash/handcash-sdk-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/HandCash/handcash-sdk-typescript/issues"
  },
  "homepage": "https://github.com/HandCash/handcash-sdk-typescript#readme"
}
